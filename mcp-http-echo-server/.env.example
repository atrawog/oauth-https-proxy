# MCP HTTP Echo Server Configuration
# Copy this file to .env and customize for your environment

# Server Configuration
MCP_ECHO_HOST=0.0.0.0
MCP_ECHO_PORT=3000

# Mode Configuration
# Options: auto, stateful, stateless
# - auto: Automatically detect based on environment
# - stateful: Full session management (development)
# - stateless: No sessions, horizontally scalable (production)
MCP_MODE=auto

# Force stateless mode regardless of other settings
# MCP_STATELESS=true

# Session Configuration (stateful mode only)
# Session timeout in seconds (default: 3600 = 1 hour)
MCP_SESSION_TIMEOUT=3600

# Protocol Configuration
# Comma-separated list of supported MCP protocol versions
MCP_PROTOCOL_VERSIONS_SUPPORTED=2025-06-18,2025-03-26,2024-11-05

# Debug Configuration
# Enable debug logging (true/false)
MCP_ECHO_DEBUG=false

# Optional log file path
# MCP_LOG_FILE=./logs/mcp-echo-server.log

# Environment Detection (used by auto mode)
# These are typically set by the platform, not manually
# KUBERNETES_SERVICE_HOST=kubernetes.default.svc
# LAMBDA_RUNTIME_DIR=/var/runtime
# FUNCTIONS_WORKER_RUNTIME=python
# GOOGLE_FUNCTION_TARGET=main
# VERCEL=1

# Development Settings
# Uncomment for local development
# MCP_MODE=stateful
# MCP_ECHO_DEBUG=true
# MCP_SESSION_TIMEOUT=7200

# Production Settings
# Uncomment for production deployment
# MCP_MODE=stateless
# MCP_ECHO_DEBUG=false
# MCP_ECHO_HOST=0.0.0.0
# MCP_ECHO_PORT=8080