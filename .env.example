# Redis configuration
REDIS_URL=redis://localhost:6379/0

# Server configuration
HTTP_PORT=80
HTTPS_PORT=443

# ACME configuration
# Production: https://acme-v02.api.letsencrypt.org/directory
# Staging: https://acme-staging-v02.api.letsencrypt.org/directory
ACME_DIRECTORY_URL=https://acme-v02.api.letsencrypt.org/directory
ACME_STAGING_URL=https://acme-staging-v02.api.letsencrypt.org/directory

# Logging
LOG_LEVEL=INFO

# Certificate renewal
RENEWAL_CHECK_INTERVAL=86400  # 24 hours in seconds
RENEWAL_THRESHOLD_DAYS=30     # Days before expiry to renew

# Testing configuration
TEST_DOMAIN=test.yourdomain.com
TEST_EMAIL=test@yourdomain.com
TEST_DOMAIN_BASE=yourdomain.com
TEST_BASE_URL=http://localhost:80
TEST_REDIS_URL=redis://localhost:6379/1
RUN_REAL_ACME_TESTS=false