# Redis configuration
REDIS_URL=redis://localhost:6379/0

# Server configuration
HTTP_PORT=80
HTTPS_PORT=443

# ACME configuration
# Production: https://acme-v02.api.letsencrypt.org/directory
# Staging: https://acme-staging-v02.api.letsencrypt.org/directory
ACME_DIRECTORY_URL=https://acme-v02.api.letsencrypt.org/directory
ACME_STAGING_URL=https://acme-staging-v02.api.letsencrypt.org/directory

# Logging
LOG_LEVEL=INFO

# Certificate renewal
RENEWAL_CHECK_INTERVAL=86400  # 24 hours in seconds
RENEWAL_THRESHOLD_DAYS=30     # Days before expiry to renew

# Testing configuration
TEST_DOMAIN=test.yourdomain.com
TEST_EMAIL=test@yourdomain.com
TEST_DOMAIN_BASE=yourdomain.com
TEST_API_URL=http://localhost:80
TEST_REDIS_URL=redis://localhost:6379/1
RUN_REAL_ACME_TESTS=false

# Docker service management configuration
# Docker group GID on host (find with: getent group docker | cut -d: -f3)
# Common values: 999 (Debian/Ubuntu), 994 (Arch), 989 (Fedora)
DOCKER_GID=999
# Docker API version (default: 1.41)
DOCKER_API_VERSION=1.41
# Optional: Override Docker host (defaults to unix socket)
# DOCKER_HOST=unix:///var/run/docker.sock

# Base domain for auto-created service proxies
BASE_DOMAIN=local

# OAuth Configuration
# GitHub OAuth App credentials (required for OAuth authentication)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# OAuth JWT Configuration
# Generate with: openssl genrsa -out private.pem 2048 && base64 -w 0 private.pem
OAUTH_JWT_PRIVATE_KEY_B64=your_base64_encoded_private_key_here

# OAuth Bootstrap Configuration
# Configure which GitHub users get which scopes on localhost proxy
# Use comma-separated GitHub usernames, or * for all users
OAUTH_LOCALHOST_ADMIN_USERS=  # Users who get admin scope (e.g., "alice,bob")
OAUTH_LOCALHOST_USER_USERS=*   # Users who get user scope (* = all)
OAUTH_LOCALHOST_MCP_USERS=     # Users who get mcp scope

# OAuth Session Configuration
OAUTH_ACCESS_TOKEN_LIFETIME=1800     # 30 minutes
OAUTH_REFRESH_TOKEN_LIFETIME=31536000  # 1 year
OAUTH_SESSION_TIMEOUT=300            # 5 minutes
OAUTH_CLIENT_LIFETIME=7776000        # 90 days

# OAuth Auth Domain (for Device Flow)
OAUTH_AUTH_DOMAIN=localhost  # Change to your auth domain if not using localhost